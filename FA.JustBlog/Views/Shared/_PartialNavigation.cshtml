@{
    List<CategoryVM> listcate = mapper.Map<List<CategoryVM>>(unitOfWork.CategoryRepository.GetAll());
}
<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Start Bootstrap</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="LastestPost">Lastest Post</a></li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="Index">About</a></li>
                @if (listcate.Count < 3)
                {
                    @foreach (var item in listcate)
                    {
                        <li class="nav-item">
                            <a class="nav-link px-lg-3 py-3 py-lg-4"
                       asp-controller="Posts"
                       asp-action="GetPostByCategory"
                       asp-route-category="@item.Name">@item.Name</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Category
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            @foreach (var item in listcate)
                            {
                                <li>
                                    <a class="dropdown-item" 
                                    asp-controller="Posts"
                               asp-action="GetPostByCategory"
                               asp-route-category="@item.Name">@item.Name</a>
                                </li>
                            }
                        </ul>
                    </li>
                }
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="Index">Contact</a></li>

            </ul>
        </div>
    </div>
</nav>